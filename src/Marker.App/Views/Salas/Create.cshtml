@model Marker.App.ViewModels.SalaViewModel

@{
    ViewData["Title"] = "Criar Sala";
}

<h3 style="padding-top:50px">@ViewData["Title"]</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unidade" class="control-label"></label> <br />
                <input type="radio" value="1" asp-for="Unidade" checked />Betim <br />
                <input type="radio" value="2" asp-for="Unidade" />Contagem <br />
                <input type="radio" value="3" asp-for="Unidade" />São Paulo
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
